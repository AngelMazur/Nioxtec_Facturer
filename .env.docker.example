# Backend configuration
FLASK_ENV=production
PORT=5000

# Security
JWT_SECRET_KEY=pon-una-clave-secreta-segura
SECRET_KEY=pon-otra-clave-secreta

# CORS (ajusta dominios públicos si aplica)
# Incluir el dominio público del frontend si usas Cloudflare
CORS_ORIGINS=https://app.nioxtec.es,http://localhost:8080
EXTRA_ORIGINS=https://app.nioxtec.es

# HTTPS behavior inside container (TLS suele terminar fuera: Cloudflare o proxy TLS)
FORCE_HTTPS=false

# Cookies (opcional): si usas subdominio dedicado para la API
# JWT_COOKIE_DOMAIN=api.nioxtec.es

# Database (default is SQLite at /app/instance/app.db)
# DATABASE_URL=postgresql+psycopg://user:pass@db:5432/nioxtec

# PDF engine path (wkhtmltopdf is installed in the backend image)
WKHTMLTOPDF_PATH=/usr/bin/wkhtmltopdf

# Company defaults (used if DB does not have company record yet)
COMPANY_NAME=Mi Empresa S.L.
COMPANY_CIF=B12345678
COMPANY_ADDRESS=Calle Ejemplo 123, Madrid
COMPANY_CITY=Madrid
COMPANY_PROVINCE=Madrid
COMPANY_EMAIL=facturas@miempresa.com
COMPANY_PHONE=600 000 000
COMPANY_IBAN=ES21 1234 5678 9012 3456 7890
COMPANY_WEBSITE=https://miempresa.com
